C           QUANTITIES FOR OPTICAL OBSERVATIONS
      REAL*10 XOP(3),XMERID(3),QXN1,XNP(3),XO(3),RR1,R,FAKE,CAKE
      EQUIVALENCE (RADDUM(1),XOP(1)),(RADDUM(4),XMERID(1)),
     1 (RADDUM(7),QXN1),(RADDUM(8),XNP(1))
      EQUIVALENCE (ANGDUM(1),XO(1)),(ANGDUM(4),RR1),(ANGDUM(5),R),
     1 (ANGDUM(6),FAKE),(ANGDUM(7),CAKE)
C        XO   = VECTOR POINTING FROM EARTH TO OBSERVED BODY CORRECTED
C               FOR ABERRATION
C        RR1  = XO(1)**2+XO(2)**2
C        R    = DSQRT(XO(1)**2+XO(2)**2+XO(3)**2)
C        XOP  = CROSS PRODUCT OF LOCAL SITE NORMAL WITH XO
C        XMERID= COMPONENT OF POLE UNIT VECTOR PERPENDICULAR TO LOCAL
C                SITE NORMAL
C        XNP  = COMPONENT OF LOCAL SITE NORMAL PERPENDICULAR TO XO
